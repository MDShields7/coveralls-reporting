{
    "name": "coveralls-reporting",
    "description": "Testing coverage reporting through coveralls.io",
    "jest": {
        "verbose": true,
        "collectCoverage": true,
        "coverageDirectory": "./coverage",
        "coverageReporters": [
            "lcov"
        ],
        "collectCoverageFrom": [
            "**/*.{js,jsx}",
            "!**/node_modules/**",
            "!**/test/**",
            "!**/vendor/**",
            "!**Gruntfile.js**"
        ]
    },
    "scripts": {
        "test": "NODE_ENV=test jest --coverage && cat coverage/lcov.info | coveralls",
        "jshint": "grunt"
    },
    "author": "Matthew Shields",
    "license": "ISC",
    "devDependencies": {
        "coveralls": "^3.1.0",
        "jest": "^26.4.2"
    },
    "dependencies": {
    }
}
