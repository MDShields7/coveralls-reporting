{
    "name": "coveralls-reporting",
    "description": "Testing coverage reporting through coveralls.io",
    "jest": {
        "verbose": true,
        "collectCoverage": true,
        "coverageDirectory": "./coverage",
        "coverageReporters": [
            "lcov"
        ],
        "collectCoverageFrom": [
            "**/*.{js,jsx}",
            "!**/node_modules/**",
            "!**/test/**",
            "!**/vendor/**",
            "!**Gruntfile.js**"
        ]
    },
    "scripts": {
        "make-dirs": "mkdir coverage && cd coverage && touch lcov.info && cd ..",
        "del-dirs": "rm -R coverage",
        "test": "NODE_ENV=test jest --coverage && cat coverage/lcov.info",
        "jshint": "grunt",
        "coveralls": "NODE_ENV=test jest --coverage && cat ./coverage/lcov.info | coveralls",
        "coveralls-v2": " NODE_ENV=test jest --coverage && coveralls < coverage/lcov.info",
        "grunt-coveralls": "grunt coveralls"
    },
    "author": "Matthew Shields",
    "license": "ISC",
    "devDependencies": {
        "coveralls": "^3.1.0",
        "grunt": "^1.3.0",
        "grunt-contrib-jshint": "^2.1.0",
        "grunt-contrib-uglify": "^5.0.0",
        "grunt-contrib-watch": "^1.1.0",
        "grunt-coveralls": "^2.0.0",
        "jest": "^26.4.2"
    },
    "dependencies": {
        "node": "^14.13.0"
    }
}
